<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="  ←   "
        android:textSize="25dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="#B31313"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_rowSpan="2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:src="@menu/circle"/>

    <TextView
        android:id="@+id/mailNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="G"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/mailName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:textSize="20dp"
        android:layout_marginLeft="110dp"
        android:textColor="@color/black"
        android:text="Google"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:textSize="10dp"
        android:layout_marginLeft="110dp"
        android:textColor="#95a5a6"
        android:text="Google@gmail.com"/>

    <TextView
        android:id="@+id/mailContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <Button
        android:id="@+id/backMail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/back" />

    <Button
        android:id="@+id/reply"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/reply"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="180dp"
        />

    <Button
        android:id="@+id/replyAll"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/replyall"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="300dp"
        />

</RelativeLayout>